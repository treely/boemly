{
  "version": "0.0.0-development",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22 <=24"
  },
  "scripts": {
    "start": "npx @chakra-ui/cli typegen ./src/theme.ts --watch & live-server dist",
    "build": "npx @chakra-ui/cli typegen ./src/theme.ts && node esbuild.config.ts",
    "test": "jest --passWithNoTests",
    "lint": "eslint src",
    "prepare": "npx @chakra-ui/cli typegen ./src/theme.ts && node esbuild.config.ts",
    "size": "size-limit",
    "analyze": "size-limit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint src"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "boemly",
  "author": "Tree.ly FlexCo",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "1800 kB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@chakra-ui/cli": "^3.30.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@size-limit/preset-big-lib": "^8.2.6",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-links": "^10.0.8",
    "@storybook/addon-themes": "^10.0.8",
    "@storybook/addon-webpack5-compiler-babel": "^4.0.0",
    "@storybook/react-webpack5": "^10.0.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.0.0",
    "@types/react-datepicker": "^4.4.2",
    "@types/react-dom": "^18.0.0",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.27.0",
    "esbuild-node-externals": "^1.20.1",
    "esbuild-plugin-tsc": "^0.5.0",
    "eslint": "^9.22.0",
    "eslint-plugin-storybook": "10.0.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "framer-motion": "^12.5.0",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.0.0",
    "react-is": "^18.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "semantic-release": "^25.0.1",
    "size-limit": "^8.2.6",
    "storybook": "^10.0.8",
    "tslib": "^2.3.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@chakra-ui/react": "^3",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@phosphor-icons/react": "^2.1.0",
    "@reactuses/core": "^6.1.6",
    "date-fns-tz": "^3.0.0",
    "framer-motion": "^12",
    "markdown-to-jsx": "^7.1.6",
    "next-themes": "^0.4.6",
    "react-datepicker": "^9.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.1"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom",
      "./src/test/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}",
      "!**/*.stories.{js,jsx,ts,tsx}",
      "!**/src/test/**",
      "!**/src/index.tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@reactuses/core|lodash-es)/).*/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "jsdom"
  },
  "description": "Boemly is the open source component library maintained by Tree.ly.",
  "repository": {
    "type": "git",
    "url": "https://github.com/treely/boemly.git"
  },
  "bugs": {
    "url": "https://github.com/treely/boemly/issues"
  },
  "homepage": "https://boemly.tree.ly",
  "release": {
    "branches": [
      "main"
    ]
  }
}
