{
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "TZ=UTC tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "boemly",
  "author": "Tree.ly GmbH",
  "module": "dist/boemly.esm.js",
  "size-limit": [
    {
      "path": "dist/boemly.cjs.production.min.js",
      "limit": "1.2 MB"
    },
    {
      "path": "dist/boemly.esm.js",
      "limit": "400 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@size-limit/preset-big-lib": "^8.1.0",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-interactions": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-syntax-highlighter": "^15.5.5",
    "babel-loader": "^8.2.3",
    "husky": "^7.0.4",
    "jest-canvas-mock": "^2.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-is": "^18.0.0",
    "semantic-release": "^19.0.2",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.0.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "framer-motion": "^7.3.6",
    "markdown-to-jsx": "^7.1.6",
    "phosphor-react": "^1.4.0",
    "react-date-picker": "^9.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-use": "^17.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "./src/test/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}",
      "!**/*.stories.{js,jsx,ts,tsx}",
      "!**/src/test/**",
      "!**/src/index.tsx"
    ]
  },
  "description": "Boemly is the open source component library maintained by Tree.ly.",
  "repository": {
    "type": "git",
    "url": "https://github.com/treely/boemly.git"
  },
  "bugs": {
    "url": "https://github.com/treely/boemly/issues"
  },
  "homepage": "https://boemly.tree.ly",
  "release": {
    "branches": [
      "main"
    ]
  }
}
