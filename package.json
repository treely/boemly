{
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18 <=22"
  },
  "scripts": {
    "start": "chakra typegen ./src/theme.ts --watch & tsup --watch",
    "build": "chakra typegen ./src/theme.ts && tsup",
    "test": "jest --passWithNoTests",
    "lint": "eslint src",
    "prepare": "chakra typegen ./src/theme.ts && tsup",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release"
  },
  "tsup": {
    "dts": true,
    "bundle": true,
    "treeshake": true,
    "target": "node18",
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "src/index.tsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "boemly",
  "author": "Tree.ly FlexCo",
  "module": "dist/boemly.esm.js",
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "400 KB"
    },
    {
      "path": "dist/index.js",
      "limit": "1.8 MB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@chakra-ui/cli": "^3.15.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mdx-js/react": "^3.1.0",
    "@size-limit/preset-big-lib": "^8.1.0",
    "@storybook/addon-actions": "^8.6.3",
    "@storybook/addon-docs": "^8.6.3",
    "@storybook/addon-essentials": "^8.6.3",
    "@storybook/addon-interactions": "^8.6.3",
    "@storybook/addon-links": "^8.6.3",
    "@storybook/addon-themes": "^8.6.3",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.5",
    "@storybook/blocks": "^8.6.3",
    "@storybook/mdx2-csf": "^1.1.0",
    "@storybook/react": "^8.6.3",
    "@storybook/react-webpack5": "^8.6.3",
    "@storybook/test": "^8.6.3",
    "@storybook/theming": "^8.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.0.0",
    "@types/react-datepicker": "^4.4.2",
    "@types/react-dom": "^18.0.0",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "eslint": "^9.22.0",
    "framer-motion": "^12.5.0",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-is": "^18.0.0",
    "semantic-release": "^19.0.2",
    "size-limit": "^8.1.0",
    "storybook": "^8.6.3",
    "tslib": "^2.3.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@ark-ui/react": "^4.9.2",
    "@chakra-ui/react": "^3.13.0",
    "@emotion/styled": "^11.14.0",
    "@phosphor-icons/react": "^2.0.14",
    "framer-motion": "^12.5.0",
    "markdown-to-jsx": "^7.1.6",
    "next-themes": "^0.4.6",
    "react-datepicker": "^8.2.1",
    "react-icons": "5.4.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-use": "^17.4.0",
    "remark-gfm": "^4.0.1"
  },
  "peerDependencies": {
    "react": "^18 || ^19"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom",
      "./src/test/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}",
      "!**/*.stories.{js,jsx,ts,tsx}",
      "!**/src/test/**",
      "!**/src/index.tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@ark-ui/react)/)"
    ],
    "testEnvironment": "jsdom"
  },
  "description": "Boemly is the open source component library maintained by Tree.ly.",
  "repository": {
    "type": "git",
    "url": "https://github.com/treely/boemly.git"
  },
  "bugs": {
    "url": "https://github.com/treely/boemly/issues"
  },
  "homepage": "https://boemly.tree.ly",
  "release": {
    "branches": [
      "main"
    ]
  }
}
